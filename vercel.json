{
  "version": 2,
  "builds": [
    {
      "src": "*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "app.py"
    },
    {
      "src": "/downloads/.*",
      "dest": "app.py"
    },
    {
      "src": "/static/.*",
      "dest": "app.py"
    },
    {
      "src": "/.*",
      "dest": "index.html"
    }
  ]
}
  